<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.velp.vluminum.activity.CadastroPosteActivity">

    <ScrollView
        android:id="@+id/containerPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TIPO POSTE -->
            <TextView
                style="@style/labelCampoFormulario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipoPoste"
                android:textColor="#ff4180ff" />

            <Spinner
                android:id="@+id/tipoPosteSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:prompt="@string/spinner_opcao_padrao" />

            <!-- DESCRIÇÃO -->
            <TextView
                style="@style/labelCampoFormulario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descricao"
                android:textColor="#ff4180ff" />

            <EditText
                android:id="@+id/descricaoEditText"
                style="@style/campoFormulario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="150"
                android:maxLines="4"
                android:singleLine="false" />

            <!-- SIGLA -->
            <TextView
                style="@style/labelCampoFormulario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sigla"
                android:textColor="#ff4180ff" />

            <EditText
                android:id="@+id/siglaEditText"
                style="@style/campoFormulario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:maxLines="1"
                android:singleLine="true" />

            <!-- ALTURA -->
            <TextView
                style="@style/labelCampoFormulario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/altura"
                android:textColor="#ff4180ff" />

            <EditText
                android:id="@+id/alturaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:maxLines="1"
                android:singleLine="true" />

            <!-- TIPO DEFEITO -->
            <TextView
                style="@style/labelCampoFormulario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipoDefeito"
                android:textColor="#ff4180ff" />

            <Spinner
                android:id="@+id/tipoDefeitoSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- BARRAMENTO -->
            <TextView
                style="@style/labelCampoFormulario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/barramento"
                android:textColor="#ff4180ff" />

            <EditText
                android:id="@+id/barramentoEditText"
                style="@style/campoFormulario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:maxLines="1"
                android:singleLine="true" />

            <!-- INFORMAÇÃO TÉCNICA -->
            <TextView
                style="@style/labelCampoFormulario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/informacaoTecnica"
                android:textColor="#ff4180ff" />

            <EditText
                android:id="@+id/informacaoTecnicaEditText"
                style="@style/campoFormulario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="4000"
                android:maxLines="10"
                android:singleLine="true" />

            <Button
                android:id="@+id/salvarPosteBtn"
                style="@style/botao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/check"
                android:text="@string/salvar" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>



